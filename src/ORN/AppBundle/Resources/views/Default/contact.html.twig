{% extends 'ORNAppBundle::layout.html.twig' %}
{% block main %}
    <div class="contact container">
    <div class="row">
            <div class="right-column col-sm-8">
                <div class="main-title text-center">
                    <h2>Let's Start Here</h2>
                    &mdash;
                    <h3 class="subtitle"></h3>
                </div>
                <div class="form-intro">
                    <p class="text-center" style="font-size: 1.13em;"><i>It all starts with a hello<br/>
                    Tell me your story and we'll figure out how best to collaborate<br/>
                    No matter where in the world your wedding is happening,<br/>
                    I'd love to hear about it and the adventure you have planned</i></p>
                </div>
                <div role="form" class="contact-form" lang="en-US" dir="ltr">
                    <div class="screen-reader-response"></div>
                    <form action="" method="post" class="contact-form" novalidate="novalidate">
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" placeholder="Your email *">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="mobile" placeholder="Phone number *">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="address" placeholder="Your address *">
                        </div>
                        <button type="submit" class="btn btn-default">Send</button>
                    </form>
                </div>
            </div>
            <div class="right-column col-sm-4">
                <div class="main-title text-center">
                    <h2>Stay Connected</h2>
                    &mdash;
                    <h3 class="subtitle"></h3>
                </div>
                <div class="the-content">
                    <p>Vancouver, British Columbia</p>
                    <p>hello at tomaszwagner dot co<br/>
                        Please use the contact form for all wedding inquiries</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}